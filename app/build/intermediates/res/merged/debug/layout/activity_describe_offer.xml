<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    tools:context="com.payforward.androidapp.post.DescribeOfferActivity">

    <ProgressBar
        android:id="@+id/progressBar11"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tit_desc_offer"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="37dp"
        android:layout_below="@+id/progressBar11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />


    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="80dp"
        android:layout_height="300dp"
        android:layout_width="match_parent"
        app:counterEnabled="true"
        app:counterMaxLength="500"
        android:layout_alignTop="@+id/textView2"
        android:id="@+id/textInputLayout">

        <EditText
            android:id="@+id/desc"
            style="@style/Input_board"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:gravity="left|top"
            android:paddingTop="20dp"
            android:hint="@string/hint_about"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.FloatingActionButton
        style="@style/Float_Button_board"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="newActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/floatingActionButton2">
    </android.support.design.widget.FloatingActionButton>




</RelativeLayout>