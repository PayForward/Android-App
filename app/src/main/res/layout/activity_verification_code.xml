<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    tools:context="com.payforward.androidapp.onboard.VerificationCodeActivity">

    <ProgressBar
        android:id="@+id/progressBar6"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/titleText"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/text_verificationCode"
        android:layout_below="@+id/progressBar6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        style="@style/Input_board"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="@string/hint_verificationCode"
        android:maxLines="1"
        android:id="@+id/editText"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/titleText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--<Button-->
        <!--android:id="@+id/button"-->
        <!--android:minHeight="65dp"-->
        <!--android:minWidth="350dp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="26dp"-->
        <!--android:text="@string/button_send_verification"-->
        <!--android:layout_below="@+id/editText"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true" />-->

    <android.support.design.widget.FloatingActionButton
        style="@style/Float_Button_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:onClick="newActivity">
    </android.support.design.widget.FloatingActionButton>

    <TextView
        android:id="@+id/textView7"
        android:text="@string/text_didnt_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:onClick="newActivity"/>

</RelativeLayout>
