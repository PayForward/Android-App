<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/set_location"
    android:backgroundTint="#AAAAAA"
    android:backgroundTintMode="multiply"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.payforward.androidapp.SetLocationActivity"
    tools:showIn="@layout/activity_set_location">

    <TextView
        android:id="@+id/location_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="143dp"
        android:text="@string/location_title1"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/current_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_title1"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/active_icon"
        android:text="@string/location_title1"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/location_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location_title2"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/current_location"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/zipcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_title2"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:text="@string/zipcode"
        android:textColor="@color/white" />
</RelativeLayout>
